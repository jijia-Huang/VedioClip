{
  "name": "vedioclip",
  "version": "0.1.0",
  "type": "module",
  "description": "桌面影片剪輯工具",
  "main": "dist-electron/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "package": "electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {},
  "devDependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.0",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.2.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0"
  },
  "build": {
    "appId": "com.vedioclip.app",
    "productName": "VedioClip",
    "compression": "maximum",
    "asar": true,
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json",
      "!**/*.map"
    ],
    "extraFiles": [
      {
        "from": "node_modules/@ffmpeg-installer/win32-x64/ffmpeg.exe",
        "to": "resources/ffmpeg.exe"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "files": [
        "**/*",
        "!locales/*",
        "locales/zh-TW.pak",
        "locales/en-US.pak"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "differentialPackage": false
    }
  }
}
